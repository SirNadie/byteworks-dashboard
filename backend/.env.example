# ============ REQUERIDAS ============

# Base de datos (Neon PostgreSQL)
DATABASE_URL=postgresql+asyncpg://user:password@host/database?sslmode=require

# Autenticaci√≥n JWT
SECRET_KEY=tu-clave-secreta-muy-segura
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ============ DISCORD (Notificaciones) ============

