# ===========================================
# ByteWorks Dashboard (Backend) - Environment Variables
# ===========================================

# ============ REQUIRED ============

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql+asyncpg://user:password@host/database?sslmode=require

# JWT Authentication
SECRET_KEY=your-very-secure-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Public API URL (for PDF links in production)
PUBLIC_API_URL=http://localhost:8000

# ============ NOTION INTEGRATION ============

# Notion API Token
NOTION_TOKEN=secret_xxxxx

# Notion Database IDs
NOTION_LEADS_DB_ID=
NOTION_CLIENTS_DB_ID=
NOTION_QUOTES_DB_ID=
NOTION_INVOICES_DB_ID=
NOTION_PAYMENTS_DB_ID=

# ============ EMAIL NOTIFICATIONS ============

# Gmail SMTP (for sending notifications)
GMAIL_ADDRESS=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-password

# Email to receive notifications (owner)
NOTIFICATION_EMAIL=your-email@gmail.com

# ============ OPTIONAL ============

# App name (default: ByteWorks Dashboard)
APP_NAME=ByteWorks Dashboard

# Debug mode (default: false)
DEBUG=false

# CORS origins (comma-separated, default includes localhost)
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend.vercel.app

# Google Drive for PDFs (not used currently)
# GOOGLE_DRIVE_ENABLED=false
# GOOGLE_DRIVE_FOLDER_ID=

# Make.com webhook (optional automation)
# MAKE_WEBHOOK_URL=
