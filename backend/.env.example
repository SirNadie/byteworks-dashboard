# ===========================================
# ByteWorks Dashboard - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# Database (Neon PostgreSQL)
# Format: postgresql+asyncpg://username:password@host/database?sslmode=require
DATABASE_URL=postgresql+asyncpg://user:password@ep-example.us-east-2.aws.neon.tech/neondb?sslmode=require

# JWT Authentication
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Application
APP_NAME=ByteWorks Dashboard
DEBUG=true
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Google Drive (Optional - for PDF storage)
GOOGLE_DRIVE_ENABLED=false
GOOGLE_DRIVE_FOLDER_ID=your-google-drive-folder-id
# Place your Google credentials JSON file as 'credentials.json' in the backend folder
